{
  "manifest_version": 2,
  "name": "BGG Component Toggler",
  "version": "1.0",
  "description": "Toggle visibility of elements of the BoardGameGeek website.",
  "permissions": ["*://*.boardgamegeek.com/*"],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*.boardgamegeek.com/*"],
      "js": ["content.js"]
    }
  ]
}
